---
import '../styles.css';
import profileImg from '../../profile.jpeg';
const { title = 'Daniel da Cunha Buerno — Desenvolvedor', description = 'Portfólio, blog e experiência do Daniel da Cunha Buerno', seo = {} } = Astro.props as any;
const base: string = import.meta.env.BASE_URL || '/';
const site = Astro.site?.toString().replace(/\/$/, '') || 'https://daniel.cunhabueno.com.br';
---
<html lang="pt-br" class="scroll-smooth">
  <head>
  <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href={`${base}favicon.ico`} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content="Daniel da Cunha Buerno, desenvolvedor .NET, Angular, DevOps, Azure, AWS, GCP, blog técnico, portfólio" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={site} />
  <meta property="og:image" content={new URL(profileImg.src, Astro.site || site).toString()} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={new URL(profileImg.src, Astro.site || site).toString()} />
  <link rel="canonical" href={site + (Astro.url?.pathname || '/')} />
  <meta name="robots" content="index, follow" />
  <link rel="manifest" href={`${base}manifest.json`} />
    <script type="application/ld+json">{JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'Person',
      name: 'Daniel da Cunha Buerno',
  url: site,
  image: site + '/profile.jpeg',
      jobTitle: 'Desenvolvedor Full-Stack (.NET, Angular)',
      sameAs: [
        'https://github.com/danieldacunhabueno'
      ]
    })}</script>
  </head>
  <body class="min-h-dvh bg-gray-50 text-gray-900 antialiased">
    <header class="border-b bg-white/80 backdrop-blur supports-[backdrop-filter]:bg-white/60 sticky top-0 z-50">
      <div class="container-max flex items-center justify-between py-4">
        <a href={base} class="font-semibold tracking-tight">Daniel da Cunha Buerno</a>
        <nav class="hidden sm:flex gap-6 text-sm">
          <a href={`${base}#skills`} class="hover:text-brand">Habilidades</a>
          <a href={`${base}#timeline`} class="hover:text-brand">Experiência</a>
          <a href={`${base}blog`} class="hover:text-brand">Blog</a>
          <a href="https://github.com/danieldacunhabueno" target="_blank" rel="noopener" class="hover:text-brand">GitHub</a>
        </nav>
      </div>
    </header>

    <main class="container-max py-8 sm:py-12">
      <slot />
    </main>

    <footer class="mt-20 border-t bg-white">
      <div class="container-max py-10 text-sm text-gray-600 flex flex-col sm:flex-row items-center justify-between gap-4">
        <p>© {new Date().getFullYear()} Daniel da Cunha Buerno</p>
        <p class="opacity-80 flex items-center gap-2">
          <a href="https://www.linkedin.com/in/danielcbueno/" target="_blank" rel="noopener" class="inline-flex items-center hover:text-brand transition">
            <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" class="w-5 h-5 mr-1" aria-hidden="true"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-10h3v10zm-1.5-11.268c-.966 0-1.75-.784-1.75-1.75s.784-1.75 1.75-1.75 1.75.784 1.75 1.75-.784 1.75-1.75 1.75zm15.5 11.268h-3v-5.604c0-1.337-.025-3.063-1.868-3.063-1.868 0-2.154 1.459-2.154 2.967v5.7h-3v-10h2.881v1.367h.041c.401-.761 1.379-1.563 2.838-1.563 3.034 0 3.595 1.997 3.595 4.59v5.606z"/></svg>
            LinkedIn
          </a>
        </p>
      </div>
    </footer>
  </body>
  
</html>
