---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({ params: { slug: post.slug }, props: { post } }));
}

const { post } = Astro.props as { post: any };
const { Content } = await post.render();
---

<BaseLayout title={`${post.data.title} â€” Blog do Daniel`} description={post.data.description}>
  <article class="prose prose-slate max-w-none">
    <h1 class="mb-2">{post.data.title}</h1>
    <time class="text-sm text-gray-500">{new Date(post.data.date).toLocaleDateString('pt-BR')}</time>
    <div class="mt-6">
      <Content />
    </div>
  </article>
</BaseLayout>
