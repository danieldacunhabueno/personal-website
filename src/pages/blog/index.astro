---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
const base = import.meta.env.BASE_URL || '/';
---

<BaseLayout title="Blog — Daniel da Cunha Buerno" description="Artigos técnicos sobre .NET, Angular, DevOps e Cloud, escritos por Daniel da Cunha Buerno.">
  <h1 class="text-3xl font-bold">Blog</h1>
  <ul class="mt-8 space-y-6">
    {posts.map(({ slug, data }) => (
      <li class="rounded-lg border bg-white p-5 hover:shadow-sm transition">
        <a href={`${base}blog/${slug}/`} class="block">
          <h2 class="text-xl font-semibold">{data.title}</h2>
          <p class="mt-2 text-gray-700">{data.description}</p>
          <time class="mt-2 block text-xs text-gray-500">{new Date(data.date).toLocaleDateString('pt-BR')}</time>
        </a>
      </li>
    ))}
  </ul>
</BaseLayout>
